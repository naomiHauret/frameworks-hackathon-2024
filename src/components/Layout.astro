---
import Meta from "./Meta.astro";
import { Wallet } from '@/components/ConnectWallet';

const { title, frameMetadata } = Astro.props
---
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <Meta frameMetadata={frameMetadata} title={title} />
    </head>
    <body class="flex flex-col min-h-screen h-full bg-neutral-200">
        <slot />
        <div class="mt-auto flex justify-center pb-12 pt-6">
            <Wallet client:only="react"/>
        </div>
    </body>
</html>